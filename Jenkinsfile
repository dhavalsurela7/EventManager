pipeline {
  agent any

  stages {
    stage('Clone Repo') {
      steps {
        echo "Cloning code from GitHub..."
      }
    }

    stage('Build') {
      steps {
        echo "Simulating build step"
      }
    }

    stage('Test') {
      steps {
        echo "Running tests"
      }
    }

    stage('Deploy') {
      steps {
        echo "Deploying app (mock)"
      }
    }
  }
}
